
@{
    ViewBag.Title = "Checkout Complete";
    Layout = "~/Views/Shared/TempLayout.cshtml";
}
<body>
    <style type="text/css">
        .Table {
            display: table;
            margin-left: auto;
            margin-right: auto;
        }

        .Title {
            display: table-caption;
            text-align: center;
            font-weight: bold;
            font-size: larger;
        }

        .Heading {
            display: table-row;
            font-weight: bold;
            text-align: center;
        }

        .Row {
            display: table-row;
        }

        .Cell {
            display: table-cell;
            border: solid;
            border-width: thin;
            padding-left: 30px;
            padding-right: 30px;
        }
    </style>


    <p><a style="image"><img src="~/Content/WebsiteImages/Danny's House of Curries Logo.jpg" class="logo" alt="" ; width="190" height="78"></a></p>
    <a class="btn" href="javascript:window.print()">Click to Print Invoice</a>
    <h2 style="text-align: center">Checkout Complete</h2>
    <p style="align-content:center" center">Thanks for your order! Your order number is: @ViewBag.result.TransactionId</p>


    <div class="Table">
        <div class="Title">
            <p>This is your Invoice</p>
        </div>
        <div class="Heading">
            <div class="Cell">
                <p>Customer</p>
            </div>
            <div class="Cell">
                <p>Address</p>
            </div>
            <div class="Cell">
                <p>Contact</p>
            </div>
        </div>
        <div class="Row">
            <div class="Cell">
                @ViewBag.result.PayerFirstName
            </div>
            <div class="Cell">
                <p>14 Watsonia Road</p>
            </div>
            <div class="Cell">
                <p>0816765678</p>
            </div>
        </div>
        <div class="Row">
            <div class="Cell">
                @ViewBag.result.PayerLastName
            </div>
            <div class="Cell">
                <p>Durban</p>
            </div>
            <div class="Cell">
                @ViewBag.result.PayerEmail
            </div>
        </div>
    </div>


    <div>
        <table class="table">
            <tr>
                <th>
                    <p>First Name</p>
                </th>
                <th>
                    <p>Last Name</p>
                </th>
                <th>
                    <p>Number of Items</p>
                </th>
                <th>
                    <p>Total Payment</p>
                </th>
                <th></th>
            </tr>

           
                <tr>
                    <td>
                        @ViewBag.result.PayerFirstName
                    </td>
                    <td>
                        @ViewBag.result.PayerLastName
                    </td>
                    <td>
                        <p>1</p>
                    </td>
                    <td>
                        @ViewBag.result.GrossTotal
                    </td>
                </tr>
            

        </table>
    </div>
    <p>
        How about shopping for some more Products in our
        @Html.ActionLink("Home",
    "Index", "Home")
    </p>


</body>
<br /><br /><br /><br />
