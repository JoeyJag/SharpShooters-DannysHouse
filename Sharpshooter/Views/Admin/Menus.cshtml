@model IEnumerable<Sharpshooter.Models.Menu>

@{
    ViewBag.Title = "Menus";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Menu</h2>
<div class="container-fluid">
    <!-- Breadcrumbs-->

    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="#">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">Categories</li>

    </ol>
    <!-- DataTables Example -->
    <div class="card mb-3">
        <div class="card-header">
            <i class="fas fa-table"></i>
            Category Details
            <a href="../Menus/Create" class="btn btn-info pull-right fa fa-plus">Add New</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Menu No.</th>
                            <th>Menu Title</th>
                            <th>Menu Description</th>
                            <th>Menu Img</th>
                            <th>Action</th>

                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Menu No.</th>
                            <th>Menu Title</th>
                            <th>Menu Description</th>
                            <th>Menu Img</th>
                            <th>Action</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model)
                        {

                        <tr>
                            <td>@item.MenuID</td>
                            <td>@item.MenuTitle</td>
                            <td>@item.MenuDescription</td>
                            <td>@item.MenuImg</td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", "Menus", new { id = item.MenuID }, "") |
                                @Html.ActionLink("Delete", "Delete", "Menus", new { id = item.MenuID }, "")
                            </td>

                        </tr>
                        }

                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>


