@model IEnumerable<Sharpshooter.Models.MenuGroup>

@{
    ViewBag.Title = "MenuGroups";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>MenuGroups</h2>

<div class="container-fluid">
    <!-- Breadcrumbs-->

    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="#">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">Categories</li>

    </ol>
    <!-- DataTables Example -->
    <div class="card mb-3">
        <div class="card-header">
            <i class="fas fa-table"></i>
            Category Details
            <a href="../MenuGroups/Create" class="btn btn-info pull-right fa fa-plus">Add New</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Menu Group No.</th>
                            <th>Menu Title</th>
                            <th>Menu Description</th>
                            <th>Menu Img</th>
                            <th>Action</th>

                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Menu Group No.</th>
                            <th>Menu Title</th>
                            <th>Menu Group Title</th>
                            <th>Menu Group Desc.</th>
                            <th>Action</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model)
                        {

                            <tr>
                                <td>@item.MenuGroupID</td>
                                <td>@item.Menu.MenuTitle</td>
                                <td>@item.MenuGroupTitle</td>
                                <td>@item.MenuGroupDescription</td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", "MenuGroups", new { id = item.MenuGroupID }, "") |
                                    @Html.ActionLink("Delete", "Delete", "MenuGroups", new { id = item.MenuGroupID }, "")
                                </td>

                            </tr>
                        }

                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>


