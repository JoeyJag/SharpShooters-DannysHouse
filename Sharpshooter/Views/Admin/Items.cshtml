@model IEnumerable<Sharpshooter.Models.MenuItem>

@{
    ViewBag.Title = "Items";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Items</h2>


<div class="container-fluid">
    <!-- Breadcrumbs-->

    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="#">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">Categories</li>

    </ol>
    <!-- DataTables Example -->
    <div class="card mb-3">
        <div class="card-header">
            <i class="fas fa-table"></i>
            Category Details
            <a href="../MenuItems/Create" class="btn btn-info pull-right fa fa-plus">Add New</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Item Number</th>
                            <th>Menu Title</th>
                            <th>Menu Item</th>
                            <th>Menu Item Quantity</th>
                            <th>Menu Item Cost</th>
                            <th>Action</th>

                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Item Number</th>
                            <th>Menu Title</th>
                            <th>Menu Item</th>
                            <th>Menu Item Quantity</th>
                            <th>Menu Item Cost</th>
                            <th>Action</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model)
                        {

                        <tr>
                            <td>@item.MenuItemID</td>
                            <td>@item.Menu.MenuTitle</td>
                            <td>@item.MenuItemTitle</td>
                            <td>@item.MenuItemQuantity</td>
                            <td>@item.MenuItemCost</td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", "MenuItems", new { id = item.MenuItemID }, "")
                                @Html.ActionLink("Delete", "Delete", "MenuItems", new { id = item.MenuItemID }, "")
                            </td>

                        </tr>
                        }

                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>
