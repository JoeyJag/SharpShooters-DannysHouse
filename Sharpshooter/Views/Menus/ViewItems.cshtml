@model Sharpshooter.Models.MenuItem

@{
    ViewBag.Title = "Item - " + Model.MenuItemTitle;
    Layout = "~/Views/Shared/TempLayout.cshtml";
}

<style>
    p {
        align-content: center;
        text-align: center
    }

    div {
        margin-left: auto;
    }

    img {
        border-radius: 10px;
    }

    .checked {
        color: orange;
    }
</style>

<p>
    @Html.ActionLink("Back to Full Menu", "ViewMenuAll")
</p>


<body>


    <!-- Start Shop Detail  -->
    <div class="shop-detail-box-main">
        <div class="container">
            <div class="row">
                <div class="col-xl-5 col-lg-5 col-md-6">
                    <div id="carousel-example-1" class="single-product-slider carousel slide" data-ride="carousel">
                        <div class="carousel-inner" role="listbox">
                            <div class="carousel-item active"> <img class="d-block w-100" src="@Url.Content(Model.MenuItemImg)" alt="First slide"> </div>
                        </div>
                        <a class="carousel-control-prev" href="#carousel-example-1" role="button" data-slide="prev">
                            <i class="fa fa-angle-left" aria-hidden="true"></i>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carousel-example-1" role="button" data-slide="next">
                            <i class="fa fa-angle-right" aria-hidden="true"></i>
                            <span class="sr-only">Next</span>
                        </a>
                        <ol class="carousel-indicators">
                            <li data-target="#carousel-example-1" data-slide-to="0" class="active">
                                <img class="d-block w-100 img-fluid" src="@Url.Content(Model.MenuItemImg)" alt="" />
                            </li>
                            <li data-target="#carousel-example-1" data-slide-to="1">
                                <img class="d-block w-100 img-fluid" src="@Url.Content(Model.MenuItemImg)" alt="" />
                            </li>
                            <li data-target="#carousel-example-1" data-slide-to="2">
                                <img class="d-block w-100 img-fluid" src="@Url.Content(Model.MenuItemImg)" alt="" />
                            </li>
                        </ol>
                    </div>
                </div>
                <div class="col-xl-7 col-lg-7 col-md-6">
                    <div class="single-product-details">
                        <h2>@Model.MenuItemTitle</h2>
                        <h5>R @String.Format("{0:F}", Model.MenuItemCost)</h5>

                        <p>
                            <h4>Food Item Description:</h4>
                        <p>
                            @Model.MenuItemDescription
                        </p>

                        <p>
                            <h4>Food Item Ingredients:</h4>
                        <p>
                            @Model.MenuItemIngredients
                        </p>

                        <div class="price-box-bar">
                            <div class="cart-and-bay-btn">
                                <a class="btn hvr-hover" data-fancybox-close="" href="../ViewMenuAll">Back To Menu</a>
                                <a class="btn hvr-hover" data-fancybox-close="" @Html.ActionLink("Add To Cart", "AddToCart", "ShoppingCart")</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <br /><br />
            <br /><br />

                  <div class="add-to-btn">


                      @if (User.IsInRole("Customer"))
                      {
                          <div class="add-comp">
                              <a class="btn hvr-hover" href=@Url.Action("Create","Reviews", new { id = Model.MenuItemID }, "") ><i class="fas fa-star"></i> Add Review</a>
                          </div>
                      }



                      <div class="cell">
                          @{ Html.RenderAction("MenuReview");}
                      </div>

                      <br />

                      <div class="row my-5">
                          <div class="col-lg-12">
                              <div class="title-all text-center">
                                  <h1>Featured Products</h1>
                                  <p>All of Our Tasty Menus to look at !!!</p>
                              </div>
                              <div class="featured-products-box owl-carousel owl-theme">
                                  <div class="item">
                                      <div class="products-single fix">
                                          <div class="box-img-hover">
                                              <img src="~/Content/ItemImages/Breyani.jpg" class="img-fluid" alt="Image">
                                              <div class="mask-icon">
                                                  <ul>
                                                      <li><a href="#" data-toggle="tooltip" data-placement="right" title="View"><i class="fas fa-eye"></i></a></li>
                                                      <li><a href="#" data-toggle="tooltip" data-placement="right" title="Compare"><i class="fas fa-sync-alt"></i></a></li>
                                                      <li><a href="#" data-toggle="tooltip" data-placement="right" title="Add to Wishlist"><i class="far fa-heart"></i></a></li>
                                                  </ul>
                                                  <a class="cart" href="@Url.Action("ViewMenuAll", "Menus")">View</a>
                                              </div>
                                          </div>
                                          <div class="why-text">
                                              <h4>Breyani</h4>
                                              <h5> Give it a Try</h5>
                                          </div>
                                      </div>
                                  </div>
                                  <div class="item">
