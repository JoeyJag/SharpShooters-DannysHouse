@model IEnumerable<Sharpshooter.Models.Menu>

@{
    /**/

    ViewBag.Title = "ViewMenuAll";
    Layout = "~/Views/Shared/TempLayout.cshtml";
}
<style>
    div {
        text-align: center;
        align-content: center;
    }
</style>
<!-- Start All Title Box -->
<div class="all-title-box">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>MENU</h2>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">MENU</li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- End All Title Box -->


<div class="about-box-main">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <h2 class="noo-sh-title">Browse Category</h2>
                <h4>
                    Select from @Model.Count()
                    genres:
                </h4>

            </div>
            
        </div>
    </div>
</div>






@foreach (var category in Model)
{
    <div style="margin-left: 100px"   class="row">
        <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
            <div class="shop-cat-box">
                <img class="img-fluid" src="@category.MenuImg" alt="" width="100" height="50" />
                <li class="btn hvr-hover">@Html.ActionLink(category.MenuTitle, "Browse", new { category = category.MenuTitle })"@category.MenuTitle</li>
            </div>
        </div>
    </div>
}




